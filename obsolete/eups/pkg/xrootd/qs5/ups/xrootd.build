# qserv build script
# # 
@QSERV FUNCTIONS@

qserv_globals @PRODUCT@ @VERSION@ &&

qserv_prepare @PRODUCT@ @VERSION@ &&
# xrootd has to be build outside of its source directory
cd .. &&
cmake ./${SRC_DIR} -DCMAKE_INSTALL_PREFIX=${PRODUCT_DIR} -DENABLE_PERL=FALSE &&
make &&
make install  &&
qserv_ups @PRODUCT@ @VERSION@ ${PRODUCT_DIR}
